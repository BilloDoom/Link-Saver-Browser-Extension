{
  "manifest_version": 3,
  "name": "Page Link Saver",
  "version": "1.2",
  "description": "Save and view current page URLs",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_title": "Save this page",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "links.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}