{
  "manifest_version": 3,
  "name": "Page Link Saver",
  "version": "1.0",
  "description": "Save the current page URL with one click",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_title": "Save this page",
    "default_icon": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}
